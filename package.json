{
  "name": "typescript-finder_refactoring-kata",
  "version": "1.0.0",
  "description": "Refactoring Java",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodelyTV/java-finder_refactoring-kata.git"
  },
  "author": "Daniel Ramos",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodelyTV/java-finder_refactoring-kata/issues"
  },
  "homepage": "https://github.com/CodelyTV/java-finder_refactoring-kata#readme",
  "scripts": {
    "clean": "rimraf coverage build tmp",
    "build": "babel src -x .ts -d build",
    "build:watch": "babel src -x .ts -d build --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/jest": "^25.2.1",
    "babel-jest": "^25.3.0",
    "jest": "^25.3.0",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleDirectories": [
      "./node_modules",
      "./src"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  }
}
